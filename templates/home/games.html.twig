        {% for game in games %}
            <div class="game">
                <div class="game-img" transition-style="in:circle:hesitate">
                    <img src="{{ game.pathImg }}" alt="">
                    <p class="game-img_price">{{ game.price }} â‚¬</p>
                </div>
