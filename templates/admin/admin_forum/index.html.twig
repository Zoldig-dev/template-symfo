{% extends 'layout/admin.html.twig' %}

{% block title %}Forum index{% endblock %}

{% block body %}
    <div class="container">
        <div class="content d-flex flex-column">
            <h1>Forum index</h1>
            <a class="btn btn-outline-light" href="{{ path('admin_forum_new') }}">Create new</a>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>CreatedAt</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for forum in forums %}
                    <tr>
                        <td>{{ forum.id }}</td>
                        <td>{{ forum.title }}</td>
                        <td>{{ forum.createdAt ? forum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-outline-light"
                                   href="{{ path('admin_forum_edit', {'id': forum.id}) }}">edit</a>
                                {{ include('admin/admin_forum/_delete_form.html.twig') }}
                            </div>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
