{% extends 'layout/admin.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>LaunchAt</th>
                <td>{{ game.launchAt ? game.launchAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ game.price }}</td>
            </tr>
            <tr>
                <th>NotGlobal</th>
                <td>{{ game.notGlobal }}</td>
            </tr>
            <tr>
                <th>PathImg</th>
                <td>{{ game.pathImg }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_game_index') }}">back to list</a>

    <a href="{{ path('admin_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('admin_game/_delete_form.html.twig') }}
{% endblock %}
