<div class="content d-flex flex-column">
    <h2 class="text-center animate__animated animate__zoomInDown my-3">Create new topic in {{ forum.title }}</h2>

    {{ form_start(form, {'attr' : {'class': 'form'}}) }}
    <div class="form-floating mb-3">
        {{ form_widget(form.title) }}
        {{ form_label(form.title) }}
    </div>
    <div class="form-floating mb-3">
        {{ form_widget(form.pathLogo) }}
        {{ form_label(form.pathLogo) }}
    </div>
    <div class="form-btn">
        {{ form_widget(form.submit) }}
    </div>
    {{ form_end(form) }}

</div>
