{% block header %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <div class="navbar-user">
                    <a class="navbar-brand" href="{{ path('home') }}"><h1>Game Trash</h1></a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 animate__animated animate__lightSpeedInRight">
                        {% if is_granted("ROLE_ADMIN") %}
                            <li class="nav-item text-center">
                                <a class="nav-link active" aria-current="page"
                                   href="{{ path('admin_catpost_list') }}">Gestion</a>
                            </li>
                        {% endif %}
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle active text-center" href="#" id="navbarDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Menu
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item text-center" href="{{ path('home') }}">Home</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-center" href="{{ path('games') }}">Games</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-center" href="{{ path('forum') }}">Mon compte</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle active text-center" href="#" id="navbarDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Forum
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    {{ get_forums() | raw }}
                                    <hr>
                                    <li>
                                        <a class="dropdown-item text-center" href="{{ path('forum') }}">Tous les
                                            forums</a>
                                    </li>
                                </ul>
                            </li>
                        {% endif %}
                        <li class="nav-item text-center">
                            <a class="nav-link active" aria-current="page"
                               href="{{ app.user ? './logout' : './login' }}">{{ app.user ? 'Deconnexion' : 'Connexion' }}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}