{% extends 'layout/admin.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <div class="container">
        <div class="content d-flex flex-column">
            <h1>Game index</h1>
            <a class="btn btn-outline-light" href="{{ path('admin_game_new') }}">Create new</a>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>LaunchAt</th>
                    <th>Price</th>
                    <th>NotGlobal</th>
                    <th>PathImg</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for game in games %}
                    <tr>
                        <td>{{ game.id }}</td>
                        <td>{{ game.title }}</td>
                        <td>{{ game.description }}</td>
                        <td>{{ game.launchAt ? game.launchAt|date('Y-m-d') : '' }}</td>
                        <td>{{ game.price }} â‚¬</td>
                        <td>{{ game.notGlobal }} / 10</td>
                        <td>{{ game.pathImg }}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-outline-light" href="{{ path('admin_game_edit', {'id': game.id}) }}">edit</a>
                                {{ include('admin/admin_game/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
